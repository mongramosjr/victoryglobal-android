<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_current_income"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    android:numColumns="1"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardUseCompatPadding="true"
    android:layout_marginStart="14dp"
    android:layout_marginEnd="14dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/textcontainer_padding_vertical"
                android:paddingStart="@dimen/container_padding_horizontal"
                android:paddingEnd="@dimen/container_padding_horizontal"
                android:text="Current Income"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead.Inverse"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/container_padding_horizontal"
                android:paddingEnd="@dimen/container_padding_horizontal"
                android:paddingBottom="@dimen/textcontainer_padding_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PHP"
                    android:gravity="top"
                    android:layout_marginEnd="4dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse"/>

                <TextView
                    android:id="@+id/current_income_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:textAppearance="@style/StatIncome"
                    />



            </LinearLayout>


        </LinearLayout>

</android.support.v7.widget.CardView>